/var/log/atop/atop.log {
    daily
    dateext
    dateformat _%Y-%m-%d_%H-%M-%S
    maxsize {{ maxsize|default('10') }}M
    missingok
    nocompress
    nocreate
    nomail
    rotate {{ rotate|default('10') }}
    prerotate
        # stop the service
        systemctl stop atop.service
    endscript
    postrotate
        # start atop service again
        systemctl start atop.service
    endscript
}

